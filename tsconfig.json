{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/store/category.reducer.js",
    "src/store/store.js",
    "src/store/root-reducer.js",
    "src/store/itunesRedux/category.selector.ts",
    "jest.setup.js",
    "jest.config.js",
    "src/pages/podcast/[podcastId]/index.tsx"
  ],
  "exclude": ["node_modules"]
}
